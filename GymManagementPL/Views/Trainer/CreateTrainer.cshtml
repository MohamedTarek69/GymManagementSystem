@model CreateTrainerViewModel
<div class="container mt-4">
    <header class="mb-4">
        <h3 class="text-primary-color">Add New Trainer</h3>
    </header>
    @Html.ValidationMessage("DataInvalid", new { @class = "text-danger" })
    <form asp-action="CreateTrainerSubmit" method="post">

        <!-- Trainer Info -->
        <div class="section-header mb-3">
            <h5 class="text-primary fw-bold">Personal Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="text" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" type="text" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" type="Date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">Gender</label>
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                    <option value="">-- Select Gender --</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

        </div>
        <div class="section-header mb-3 mt-4">
            <h5 class="text-primary fw-bold">Address Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">

            <div class="col-12 col-md-6">
                <label asp-for="BuildingNumber" class="form-label"></label>
                <input asp-for="BuildingNumber" type="text" class="form-control" />
                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label asp-for="Street" class="form-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <!-- Professional Information -->
        <div class="section-header mb-3">
            <h5 class="text-primary fw-bold">Professional Information</h5>
            <hr class="mt-2">
        </div>
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label fw-semibold">
                    Specializations <span class="text-danger">*</span>
                </label>

                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               asp-for="Specializations"
                               value="@Specialties.GeneralFitness"
                               id="Specializations_GeneralFitness" />
                        <label class="form-check-label" for="Specializations_GeneralFitness">GeneralFitness</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               asp-for="Specializations"
                               value="@Specialties.Yoga"
                               id="Specializations_Yoga" />
                        <label class="form-check-label" for="Specializations_Yoga">Yoga</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               asp-for="Specializations"
                               value="@Specialties.Boxing"
                               id="Specializations_Boxing" />
                        <label class="form-check-label" for="Specializations_Boxing">Boxing</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input"
                               type="radio"
                               asp-for="Specializations"
                               value="@Specialties.CrossFit"
                               id="Specializations_CrossFit" />
                        <label class="form-check-label" for="Specializations_CrossFit">CrossFit</label>
                    </div>
                    <span asp-validation-for="Specializations" class="text-danger"></span>
                </div>
            </div>

        <footer class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-fill">Add</button>
        </footer>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
